<div class="row w-25">
    <button class="btn" style="width: fit-content;"><a href="/store/home" style="float: inline-start;">
            <img src="\assets\imgs\site\svg\arrow_back_ios_50dp_982B2B_FILL0_wght400_GRAD0_opsz48.svg" alt="">
        </a></button>

</div>
<div class="row w-50 m-auto justify-content-center aling-items-center">
    <div class="card shadow border-0"
        style="border-left: 5px solid #cfa539; background-color: #982b2b !important color:white">
        <div class="card-body">
            <div class="col">
                <div class="row w-100 d-flex text-center container-fluid justify-content-center aling-items-center"
                    style="border-bottom: 1px solid #898989;">
                    <h3 class="fw-bold">{{pedido.comercio.name}}</h3>

                    <img src="\assets\imgs\site\delivery-man.png" style="width: 100px; height: 80px"
                        class="img-fluid rounded">
                    <small class="fw-bold ">{{pedido.estado}}</small>
                    <small class="text-muted">{{pedido.fecha}}</small>

                    <h4 class="fw-bold mt-1">Tu pedido</h4>
                    {{#each productos}}
                    <div class="row mt-4 align-items-center" style="border-bottom: 1px solid #eee; margin-top:">
                        <div class="col col-md-9 d-flex gap-3 align-items-center ">
                            <img class="mb-2 img-fluid rounded" style="width: 50px; height: 50px;" src="{{imagen}}"
                                alt="">
                            {{nombre}}
                        </div>
                        <div class="col col-md-3 ">
                            <p class="fw-bold float-end">RD$ {{precio}}</p>
                        </div>
                    </div>
                    {{/each}}
                </div>
                <div class="row mt-1 mb-1 me-1" style="">
                    <div class="mt-3 fw-bold fs-4 container d-flex align-items-center" style="gap: 400px;">Total:
                        <p>RD$ {{pedido.total}}</p>
                    </div>

                </div>
                {{#if delivery}}
                {{else}}<a href="/store/pedido/index/assing-delivery/{{pedido.id}}" class="btn float-end mt-3"
                    style="background-color: #982b2b; color:white;">Asignar Delivery</a>{{/if}}
            </div>
        </div>
    </div>
</div>