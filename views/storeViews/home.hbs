<div style="background-color: #fffaf0;">
    <div style="max-height: 720px;   height: 720px; overflow-y: auto; mt-5">
        <h3 class="fw-bold text-center mb-5 mt-5">PEDIDOS DEL COMERCIO</h3>

        {{#if hasPedidos}}
        <div class="row w-50 m-auto justify-content-center aling-items-center">
            <div class="card shadow border-0"
                style="border-left: 5px solid; background-color: #982b2b !important color:white">
                <div class="card-body">
                    <div class="col">
                        {{#each pedidos}}
                        <a href="/store/pedido/index/{{id}}">
                            <div class="row float-start w-100 g-4 aling-items-center justify-content-center"
                                style="border-bottom: 1px solid #eee; margin-top: 0.1px">
                                <div class="col col-2">
                                    <img src="{{../store.logo}}" width="100px" height="100px"
                                        alt="imgen del logo del negocio" class="img-fluid rounded mb-3 ">
                                </div>
                                <div class="col col-10">
                                    <small class="fw-bold ">{{estado}}</small>
                                    <small class="text-muted">• {{fecha}}</small>
                                    <div class="mt-2"><small class="fw-bold">{{../store.name}}</small></div>
                                    <div class="text-muted mt-2">${{total}} <small class="text-muted">• {{productos}}
                                            productos</small></div>
                                </div>
                            </div>
                        </a>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        <div class="row w-50 m-auto justify-content-center aling-items-center">
            <div class="col">
                <div class="row w-100 g-4">
                    <div class="col col-md-12">
                        <div class="card shadow border-0"
                            style="border-left: 5px solid; background-color: #982b2b !important color:white">
                            <div class="card-body text-center">
                                <img src="\assets\imgs\site\svg\sentiment_sad_24dp_982B2B_FILL0_wght400_GRAD0_opsz24.svg"
                                    alt="" style="width: 50px; height: 50px;">
                                <h5 class="mt-3" style="font-weight: bold;">No hay pedidos nuevos, aqui saldran los
                                    pedidos
                                    que
                                    sean
                                    solicitados a tu comercio
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}
    </div>
</div>