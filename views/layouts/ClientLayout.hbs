<body class="body-client">
  <header>
    <nav class="navbar navbar-expand-lg bg-dark shadow navbar-client" data-bs-theme="dark">
      <div class="container-fluid">
        <h3 class="m-3">ZIPY <img src="\assets\imgs\site\svg\dining_NaNdp_F3F3F3_FILL0_wght400_GRAD0_opsz48.svg" alt="">
        </h3>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
          aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>
    </nav>
  </header>
  <div class="row">
    <div class="col-1 col-sm-1">
      <section class="seccion-lateral-client shadow top-fixed">
        <ul class="navbar-nav nav-navbar sidebar">
          <li class="nav-item">
            <a class="nav-link client-option" href="/client/home"><img
                src="\assets\imgs\site\svg\home_NaNdp_F3F3F3_FILL0_wght400_GRAD0_opsz48.svg" alt=""></a>
          </li>
          <li class="nav-item">
            <a class="nav-link client-option" href="/client/profile"><img
                src="\assets\imgs\site\svg\account_circle_NaNdp_F3F3F3_FILL0_wght400_GRAD0_opsz48.svg" alt=""></a>
          </li>
          <li class="nav-item">
            <a class="nav-link client-option" href="/client/history"><img
                src="\assets\imgs\site\svg\order_approve_NaNdp_F3F3F3_FILL0_wght400_GRAD0_opsz48.svg" alt=""></a>
          </li>
          <li class="nav-item">
            <a class="nav-link client-option" href="/client/directions/home"><img
                src="\assets\imgs\site\svg\add_location_NaNdp_F3F3F3_FILL0_wght400_GRAD0_opsz48.svg" alt=""></a>
          </li>
          <li class="nav-item">
            <a class="nav-link client-option" href="/client/favorites/home"><img
                src="\assets\imgs\site\svg\favorite_NaNdp_F3F3F3_FILL0_wght400_GRAD0_opsz48.svg" alt=""></a>
          </li>
          <li class="nav-item">
            <a class="nav-link client-option" href="/user/logout"> <img
                src="\assets\imgs\site\svg\chip_extraction_NaNdp_F3F3F3_FILL0_wght400_GRAD0_opsz48.svg" alt="">{{#if
              hasUser}}({{user.email}}){{/if}} </a>
          </li>
        </ul>
      </section>
    </div>
    <div class="col-11 col-sm-11 " style="padding-right: 30px; ">
      {{{body}}}
    </div>

    <div class="position-fixed top-0 end-0 m-5 pt-3" style="z-index: 9999; width: 300px;">
      {{#if hasErrors}}
      <div class="alert alert-danger alert-dismissible fade show mt-5" role="alert" id="alerta">
        <ul>
          {{#each errors}}
          <li>{{this}}</li>
          {{/each}}
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
      </div>
      {{/if}}

      {{#if hasSuccess}}
      <div class="alert alert-success alert-dismissible fade show  mt-5" role="alert" id="alerta">
        <ul>
          {{#each success}}
          <li>{{this}}</li>
          {{/each}}
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
      </div>
      {{/if}}
    </div>
  </div>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
