<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/assets/Css/Libraries/bootstrap/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" />
  <link rel="stylesheet" href="/assets/Css/index.css" />
  {{{_sections.styles}}}
  <title>{{page-title}}</title>
</head>

<body>
  <nav class="navbar navbar-expand-lg bg-dark shadow" data-bs-theme="dark">
    <div class="container-fluid">
      <h3 class="m-3">Admin Settings</h3>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
  </nav>

  <div class="row" id="fila-principal">
    <div class="col-2 col-sm-2">
      <section class="seccion-lateral shadow top-fixed">
        <ul class="nav-navbar">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/admin/dashboard/home">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/dashboard/clients">Clientes</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/dashboard/deliveries">Deliveries</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/dashboard/stores">Comercios</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/admin/configurations/itbis/home">Configuración</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/admins/home">Administradores
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/storesTypes/home">Tipo de comercios
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/user/logout"> Cerrar Sesión{{#if hasUser}}({{user.email}}){{/if}} </a>
          </li>
        </ul>
      </section>
      <div class="col-10 col-sm-10">
        {{#if hasErrors}}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <ul>
            {{#each errors}}
            <li>{{this}}</li>
            {{/each}}
          </ul>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
        </div>
        {{/if}}

        {{#if hasSuccess}}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <ul>
            {{#each success}}
            <li>{{this}}</li>
            {{/each}}
          </ul>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
        </div>
        {{/if}}
        {{{body}}}
      </div>

    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
    integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script src="/assets/JavaScript/Libraries/bootstrap/bootstrap.min.js"></script>
  {{{_sections.scripts}}}
</body>