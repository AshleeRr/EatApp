<div class="row mt-5">
    <div class="text-center">
        <h1>Comercios registrados</h1>
    </div>
</div>

<div style="max-height: 620px; height: 620px; overflow-y: auto; width:100%">
    <table class="table table-striped table-bordered table-hover text-center"
        style="border-radius: 12px; overflow: hidden; box-shadow: 0 2px 8px rgba(36,45,80,0.08);">
        {{#if hasStores}}
        <div class="row">
            <thead>
                <tr>
                    <th style="background-color: #fdbf50; color: white; border: none;">Nombre</th>
                    <th style="background-color: #fdbf50; color: white; border: none;">Logo</th>
                    <th style="background-color: #fdbf50; color: white; border: none;">Pedidos recibidos</th>
                    <th style="background-color: #fdbf50; color: white; border: none;">Telefono</th>
                    <th style="background-color: #fdbf50; color: white; border: none;">Apertura</th>
                    <th style="background-color: #fdbf50; color: white; border: none;">Cierre</th>
                    <th style="background-color: #fdbf50; color: white; border: none;">Correo</th>
                    <th style="background-color: #fdbf50; color: white; border: none;">Estado</th>
                    <th style="background-color: #fdbf50; color: white; border: none;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each stores}}
                <tr style="border: none; consulta-row">
                    <td style="border: none; background: #f8fafc;">{{this.nombre}}</td>
                    <td style="border: none; background: #f8fafc;"><img src="{{this.logo}}" alt="logo de un  comercio"
                            width="100px" height="100px"></td>
                    <td style="border: none; background: #f8fafc;">{{this.cantidadPedidos}}</td>
                    <td style="border: none; background: #f8fafc;">{{this.telefono}}</td>
                    <td style="border: none; background: #f8fafc;">{{this.horaApertura}}</td>
                    <td style="border: none; background: #f8fafc;">{{this.horaCierre}}</td>
                    <td style="border: none; background: #f8fafc;">{{this.correo}}</td>
                    {{#if this.isActive}}
                    <td style="border: none; background: #f8fafc;"><span class="badge bg-success me-2">Activo</span>
                    </td>
                    <td style="border: none; background: #f8fafc;">
                        <a class="btn btn-warning btn-sm" href="/admin/dashboard/changeUser-status/{{this.userId}}">
                            <i class="fas fa-user-slash me-1"></i>Desactivar
                        </a>
                    </td>
                    {{else}}
                    <td style="border: none; background: #f8fafc;"><span class="badge bg-danger me-2">Inactivo</span>
                    </td>
                    </span>
                    <td style="border: none; background: #f8fafc;">
                        <a class="btn btn-success btn-sm" href="/admin/dashboard/changeUser-status/{{this.userId}}">
                            <i class="fas fa-user-check me-1"></i>Activar
                        </a>
                    </td>
                    {{/if}}

                </tr>
                {{/each}}
            </tbody>
    </table>
    {{else}}
    <div class="row d-flex justify-content-center">
        <div class="col-12 col-sm-4">
            <div class="alert alert-warning" role="alert">
                <i class="bi bi-exclamation-circle-fill me-1"></i>Todavia no hay comercios registrados
            </div>
        </div>

    </div>
    {{/if}}
</div>
</div>