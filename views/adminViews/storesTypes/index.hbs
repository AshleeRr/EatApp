<div class="row mt-5">
    <div class="text-center">
        <h1>Tipos de Comercio</h1>
    </div>
</div>

<div class="row">
    <div class="col-12 col-sm-4 mb-3 mt-3">
        <a href="/admin/storesTypes/create" class="btn btn-dark" style="background-color: #9a3950;">Agregar
            <i class="bi bi-plus-circle"></i></a>
    </div>
</div>

<div style="max-height: 500px;   height: 620px; overflow-y: auto;">
    <table class="table table-striped table-bordered table-hover text-center"
        style="border-radius: 12px; overflow: hidden; box-shadow: 0 2px 8px rgba(36,45,80,0.08);">
        {{#if hasStoresTypes}}
        <div class="row">
            <thead>
                <tr>
                    <th style="background-color: #fdbf50; color: white; border: none;">Icono</th>
                    <th style="background-color: #fdbf50; color: white; border: none;">Nombre</th>
                    <th style="background-color: #fdbf50; color: white; border: none;">Descripcion</th>
                    <th style="background-color: #fdbf50; color: white; border: none;">Cantidad de Comercios</th>
                    <th style="background-color: #fdbf50; color: white; border: none;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each store}}
                <tr style="border: none; consulta-row">
                    <td style="border: none; background: #f8fafc;"><img src="{{icono}}" alt="Foto pokemon" width="60px"
                            height="60px"></td>
                    <td style="border: none; background: #f8fafc;">{{nombre}}</td>
                    <td style="border: none; background: #f8fafc;">{{descripcion}}</td>
                    <td style="border: none; background: #f8fafc;">
                        {{count}}
                    </td>
                    <td style="border: none; background: #f8fafc;">
                        <form class="form-eliminar">
                            <a href="/admin/storesTypes/edit/{{id}}" class="btn btn-warning me-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a href="/admin/storesTypes/delete/{{id}}" class="btn btn-danger me-2">
                                <i class="bi bi-x-circle" type="submit"></i>
                            </a>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
    </table>
    {{else}}
    <div class="row d-flex justify-content-center">
        <div class="col-12 col-sm-4">
            <div class="alert alert-warning" role="alert">
                <i class="bi bi-exclamation-circle-fill me-1"></i>No hay tipos de comercios agregados, agrega una nuevo
            </div>
        </div>

    </div>
    {{/if}}
</div>
</div>