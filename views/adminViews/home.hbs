<div class="container mt-4">
    <h2 class="mb-4 text-center">ADMIN DASHBOARD</h2>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow border-0 h-100" style="border-left: 5px solid #cfa539;">
                <div class="card-body text-center">
                    <i class="fa-sharp-duotone mb-2 fa-solid fa-bowl-food fa-2x text-warning"></i>
                    <h5 class="card-title">Productos Totales</h5>
                    <h3 class="fw-bold">{{productos}}</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow border-0 h-100" style="border-left: 5px solid #4caf50;">
                <div class="card-body text-center">
                    <i class="fas fa-store fa-2x mb-2 text-success"></i>
                    <h5 class="card-title">Tiendas Activas</h5>
                    <h3 class="fw-bold">{{ActiveStores}}</h3>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow border-0 h-100" style="border-left: 5px solid #f44336;">
                <div class="card-body text-center">
                    <i class="fas fa-store-slash fa-2x mb-2 text-danger"></i>
                    <h5 class="card-title">Tiendas Inactivas</h5>
                    <h3 class="fw-bold">{{InactiveStores}}</h3>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow border-0 h-100" style="border-left: 5px solid #2196f3;">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-2x mb-2 text-primary"></i>
                    <h5 class="card-title">Clientes Activos</h5>
                    <h3 class="fw-bold">{{ActiveClients}}</h3>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow border-0 h-100" style="border-left: 5px solid #9c27b0;">
                <div class="card-body text-center">
                    <i class="fas fa-user-slash fa-2x mb-2 text-secondary"></i>
                    <h5 class="card-title">Clientes Inactivos</h5>
                    <h3 class="fw-bold">{{InactiveClients}}</h3>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow border-0 h-100" style="border-left: 5px solid #ff9800;">
                <div class="card-body text-center">
                    <i class="fas fa-motorcycle fa-2x mb-2 text-warning"></i>
                    <h5 class="card-title">Repartidores Activos</h5>
                    <h3 class="fw-bold">{{ActiveDeliveries}}</h3>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow border-0 h-100" style="border-left: 5px solid #795548;">
                <div class="card-body text-center">
                    <i class="fas fa-user-times fa-2x mb-2 text-muted"></i>
                    <h5 class="card-title">Repartidores Inactivos</h5>
                    <h3 class="fw-bold">{{InactiveDeliveries}}</h3>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow border-0 h-100" style="border-left: 5px solid #673ab7;">
                <div class="card-body text-center">
                    <i class="fas fa-box-open fa-2x mb-2 text-purple"></i>
                    <h5 class="card-title">Órdenes Totales</h5>
                    <h3 class="fw-bold">{{totalOrdersCount}}</h3>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow border-0 h-100" style="border-left: 5px solid #009688;">
                <div class="card-body text-center">
                    <i class="fas fa-calendar-day fa-2x mb-2 text-teal"></i>
                    <h5 class="card-title">Órdenes de Hoy</h5>
                    <h3 class="fw-bold">{{todayOrdersCount}}</h3>
                </div>
            </div>
        </div>
    </div>
</div>