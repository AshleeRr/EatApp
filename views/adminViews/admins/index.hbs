<div class="row mt-5">
    <div class="text-center">
        <h1>Administradores</h1>
    </div>
</div>

<div class="row">
    <div class="col-12 col-sm-4 mb-3 mt-3">
        <a href="/admin/admins/create" class="btn btn-dark" style="background-color: #9a3950;">Agregar
            <i class="bi bi-plus-circle"></i></a>
    </div>
</div>

<div style="max-height: 500px; overflow-y: auto;">
    <table class="table table-striped table-bordered table-hover text-center"
        style="border-radius: 12px; overflow: hidden; box-shadow: 0 2px 8px rgba(36,45,80,0.08);">
        {{#if hasadmins}}
        <div class="row">
            <thead>
                <tr>
                    <th style="background-color: #fdbf50; color: white; border: none;">Nombre</th>
                    <th style="background-color: #fdbf50; color: white; border: none;">Apellido</th>
                    <th style="background-color: #fdbf50; color: white; border: none;">Usuario</th>
                    <th style="background-color: #fdbf50; color: white; border: none;">Cedula</th>
                    <th style="background-color: #fdbf50; color: white; border: none;">Correo</th>
                    <th style="background-color: #fdbf50; color: white; border: none;">Estado</th>
                    <th style="background-color: #fdbf50; color: white; border: none;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each admins}}
                <tr style="border: none; consulta-row">
                    <td style="border: none; background: #f8fafc;">{{nombre}}</td>
                    <td style="border: none; background: #f8fafc;">{{apellido}}</td>
                    <td style="border: none; background: #f8fafc;">{{usuario}}</td>
                    <td style="border: none; background: #f8fafc;">{{cedula}}</td>
                    <td style="border: none; background: #f8fafc;">{{correo}}</td>
                    {{#if user.isActive}}
                    <td style="border: none; background: #f8fafc;"><span class="badge bg-success me-2">Activo</span>
                    </td>
                    {{else}}
                    <td style="border: none; background: #f8fafc;"><span class="badge bg-danger me-2">Inactivo</span>
                    </td>
                    </span>
                    {{/if}}
                    <td style="border: none; background: #f8fafc;">
                        {{#if user.isActive}}
                        <a class="btn btn-success btn-sm mb-2 w-75"
                            href="/admin/dashboard/changeUser-status/{{user.id}}">
                            </i>Desactivar
                        </a>
                        {{else}}
                        <a class="btn btn-success btn-sm mb-2 w-75"
                            href="/admin/dashboard/changeUser-status/{{user.id}}">
                            </i>Activar
                        </a>
                        {{/if}}
                        <form action="/admin/admins/delete/{{id}}" class="form-eliminar" method="post">
                            <a href="/admin/admins/edit/{{id}}" class="btn btn-warning me-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <button type="submit" class="btn btn-danger me-1">
                                <i class="bi bi-x-circle"></i>
                            </button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
    </table>
    {{else}}
    <div class="row d-flex justify-content-center">
        <div class="col-12 col-sm-4">
            <div class="alert alert-warning" role="alert">
                <i class="bi bi-exclamation-circle-fill me-1"></i>No hay administradores
            </div>
        </div>

    </div>
    {{/if}}
</div>
</div>