<div class="container d-flex justify-content-center align-items-start" style="min-height: 100vh; padding-top: 80px;">
  <form class="w-100" style="max-width: 600px;" action="/user/forgotPassword" method="POST">
    <h2 class="text-center mb-4">Forgot Your Password?</h2>
      <div class="col-md-6 mb-4">
        <h5>A link will be sent to your mail so you can reset your password</h5>
        <label for="username" class="form-label">UserName/Email</label>
        <input type="text" class="form-control" id="username" name="UserName_Mail" required="required">
      </div>

    <div class="d-flex justify-content-between gap-2 flex-wrap">
      <a href="/" class="btn btn-outline-secondary flex-fill">
        <i class="bi bi-box-arrow-left"></i> Go back to Login
      </a>
      <button type="submit" class="btn btn-dark flex-fill">
        <i class="bi bi-person-check"></i> Reset Password
      </button>
    </div>
  </form>
</div>
