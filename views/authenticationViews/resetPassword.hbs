<div class="container d-flex justify-content-center align-items-start" style="min-height: 100vh; padding-top: 80px;">
  <form class="w-100" style="max-width: 600px;" action="/user/resetPassword" method="POST">
    <h2 class="text-center mb-4">Reset Password</h2>
    <input type="hidden" name="passwordToken" value="{{passwordToken}}" />
    <input type="hidden" name="userId" value="{{userId}}"/>

    <div class="mb-4">
      <label for="password" class="form-label">New Password</label>
      <div class="input-group">
        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
        <input type="password" class="form-control" id="password" name="NewPassword"placeholder="Enter your new password" required="required">
      </div>
    </div>

    <div class="mb-4">
      <label for="confirmPassword" class="form-label">Confirm New Password</label>
      <div class="input-group">
        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
        <input type="password" class="form-control" id="confirmPassword" name="ConfirmNewPassword"placeholder="Confirm your password" required="required">
      </div>
    </div>

    <div class="d-flex justify-content-between gap-2 flex-wrap">
      <a href="/" class="btn btn-outline-secondary flex-fill">
        <i class="bi bi-box-arrow-left"></i> Go back to Login
      </a>
      <button type="submit" class="btn btn-dark flex-fill">
        <i class="bi bi-person-check"></i> Update Password
      </button>
    </div>
  </form>
</div>
