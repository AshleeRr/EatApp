

{{#if hasOrders}}
<div class="row justify-content-center gap-3 mt-4">
  {{#each ordersList}}
    <a href="/delivery/orders/{{this.id}}/details" 
       class="text-decoration-none col-12 col-md-8">
      <div class="card shadow-sm p-3 mb-3 h-100">
        <!-- Header comercio -->
        <div class="d-flex align-items-center mb-3">
          <img src="{{this.comercio.logo}}" 
               alt="{{this.comercio.name}} logo" 
               class="rounded me-3" 
               style="width: 60px; height: 60px; object-fit: cover;">
          <div>
            <h5 class="mb-0 text-dark">{{this.comercio.name}}</h5>
            <span class="badge {{#if (eq this.estado "en proceso")}}bg-warning text-dark{{else}}bg-success{{/if}}">
              {{this.estado}}
            </span>
          </div>
        </div>

        <!-- Info del pedido -->
        <ul class="list-group list-group-flush mb-2">
          <li class="list-group-item d-flex justify-content-between">
            <span>Total:</span> <strong>${{this.total}}</strong>
          </li>
          <li class="list-group-item d-flex justify-content-between">
            <span>Amount of Products:</span> <strong>{{productsCount}}</strong>
          </li>
          <li class="list-group-item d-flex justify-content-between">
            <span>Date:</span> 
            <strong>{{Format this.createdAt}}</strong>
          </li>
        </ul>
      </div>
    </a>
  {{/each}}
</div>

{{else}}
<div class="row d-flex justify-content-center mt-4">
  <div class="col-12 col-md-8 col-lg-6">
    <div class="alert alert-dark text-center shadow-sm p-4 rounded" role="alert" style="font-size: 1.1rem;">
      <i class="bi bi-info-circle me-2 fs-4"></i>
      You do not have any orders assigned
    </div>
  </div>
</div>
{{/if}}
