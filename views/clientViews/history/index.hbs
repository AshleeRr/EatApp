<h3 class="mt-5 fw-bold text-center">MIS PEDIDOS</h3>
{{#if hasPedidos}}
<div style="max-height: 600px;   height: 600px; overflow-y: auto; mt-5">
    <div class="row w-75 m-auto justify-content-center ">
        <div class="card shadow border-0"
            style="border-left: 5px solid #cfa539; background-color: #982b2b !important color:white">
            <div class="card-body">
                <div class="col">
                    {{#each pedidos}}
                    <a href="/client/history/details/{{id}}">
                        <div class="row float-start w-100 g-4 aling-items-center justify-content-center"
                            style="border-bottom: 1px solid #eee; margin-top: 0.1px">
                            <div class="col col-2">
                                <img src="{{comercio.logo}}" width="100px" height="100px"
                                    alt="imgen del logo del negocio" class="img-fluid rounded mb-3 ">
                            </div>
                            <div class="col col-10">
                                <small class="fw-bold ">{{estado}}</small>
                                <small class="text-muted">• {{fecha}}</small>
                                <div class="mt-2"><small class="fw-bold">{{comercio.name}}</small></div>
                                <div class="text-muted mt-2">${{total}} <small class="text-muted">• {{productos}}
                                        productos</small></div>
                            </div>
                        </div>
                    </a>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
{{else}}
<div class="row w-50 m-auto justify-content-center aling-items-center mt-5">
    <div class="col">
        <div class="row w-100 g-4">
            <div class="col col-md-12">
                <div class="card shadow border-0"
                    style="border-left: 5px solid #cfa539; background-color: #982b2b !important color:white">
                    <div class="card-body text-center">
                        <img src="\assets\imgs\site\svg\sentiment_sad_24dp_982B2B_FILL0_wght400_GRAD0_opsz24.svg" alt=""
                            style="width: 50px; height: 50px;">
                        <h5 class="mt-3" style="font-weight: bold;">No has realizado ningun pedido
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/if}}