<div class="row mt-4 justify-content-center">
    <div class="mt-3 mb-5">
        <a href="/client/home" class="btn mt-2" style="float: inline-start;">
            <img src="\assets\imgs\site\svg\arrow_back_ios_50dp_982B2B_FILL0_wght400_GRAD0_opsz48.svg" alt="">
        </a>
        <h2 class="fw-bold mt-2" style="margin-left: 550px;">{{comercio.name}}</h2>
    </div>
    {{#if hasCategorias}}
    <div class="row" style="padding-right: 100px;">
        <div class="col-md-11">
            {{#each categorias}}
            <div class="row g-4 mb-5">
                <h5 class="mt-3 fw-bold">{{nombre}}
                </h5>
                {{#if productos.length}}
                {{#each productos}}
                <div class="col-md-4">
                    <div class="card shadow border-0 h-100 card-productos">
                        <div class="card-body m-0">
                            <div class="row">
                                <div class="col col-md-7">
                                    <h6 style="font-weight: bold;">{{nombre}}</h6>
                                    <p class="text-muted">{{descripcion}}</p>
                                    <div class="row sticky">
                                        <div class="col col-md-6">
                                            <h4 class="fw-bold">${{precio}}</h4>
                                        </div>
                                        <div class="col col-md-6 h-25">
                                            {{#if inCart}}
                                            {{else}}
                                            <form action="/client/store/add-product/shopping-car" method="post">
                                                <input type="hidden" name="idProducto" value="{{id}}">
                                                <button class="float-end btn" type="submit" title="agregar al carrito">
                                                    <img src="\assets\imgs\site\svg\add_shopping_cart_24dp_982B2B_FILL0_wght400_GRAD0_opsz24.svg"
                                                        alt="">
                                                </button>
                                            </form>
                                            {{/if}}
                                        </div>
                                    </div>
                                </div>
                                <div class="col col-md-5"><img src=" {{imagen}}" alt="{{nombre}}" class="rounded"
                                        style="width: 100%; height: 100%; object-fit: cover;">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
                {{else}}
                <div class="row w-75 g-4">
                    <div class="col col-md-12">
                        <div class="card shadow border-0"
                            style="border-left: 5px solid #cfa539; background-color: #982b2b !important color:white">
                            <div class="card-body text-center">
                                <img src="\assets\imgs\site\svg\sentiment_sad_24dp_982B2B_FILL0_wght400_GRAD0_opsz24.svg"
                                    alt="" style="">
                                <h5 class="mt-3" style="font-weight: bold;">Lo sentimos todavia no tenemos productos
                                    de
                                    esta categoria
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>
                {{/if}}
            </div>
            {{/each}}
        </div>
    </div>
    <div class="contenedor-carrito">
        <div class="card shadow border-0">
            <div class="w-75 m-auto" style="border-bottom: 2px solid #982b2b;">
                <h6 class="text-center" style="font-weight: bold;">CARRITO</h6>
            </div>

            {{#if hasCarrito}}
            <div class="contenedor-contenedor-carrito">
                <div class="card-body carrito-lista">
                    {{#each carrito}}
                    <div class="d-flex justify-content-between align-items-center mb-2 ">
                        <div class="row">
                            <div class="col col-md-9">
                                <div>
                                    <small class="fw-bold small">{{producto.nombre}}</small>
                                    <div class="text-muted small">${{producto.precio}}</div>
                                </div>
                            </div>
                            <div class="col col-md-1 me-1">
                                <form action="/client/store/delete-product/shopping-car" method="POST">
                                    <input type="hidden" name="idProducto" value="{{producto.id}}">
                                    <button type="submit" class="btn"> <img
                                            src="\assets\imgs\site\svg\delete_24dp_982B2B_FILL0_wght400_GRAD0_opsz24.svg"
                                            alt=""></button>
                                </form>
                            </div>
                        </div>

                    </div>
                    {{/each}}
                </div>
            </div>
            {{else}}
            <div class="text-center mt-2 w-75 m-auto">
                <img src="\assets\imgs\site\svg\shopping_cart_off_50dp_982B2B_FILL0_wght400_GRAD0_opsz48.svg" alt="">
                <h6 class="mt-3">No tienes productos en el carrito</h6>
            </div>
            {{/if}}

            <div class="card-footer border-0 text-center" style="background-color: white;">
                {{#if factura}}
                <div class="mt-3 pt-2" style="border-top: 2px solid #982b2b">
                    <div class="d-flex justify-content-between">
                        <span>Subtotal:</span>
                        <strong>{{factura.subtotal}} $</strong>
                    </div>
                </div>
                <a href="/client/order/facturar" class="btn mt-3 mb-1"
                    style="background-color: #982b2b; color:white;">Continuar</a>
                {{/if}}
            </div>
        </div>
    </div>
    {{else}}
    <div class="row w-75 g-4">
        <div class="col-md-12">
            <div class="card shadow border-0"
                style="border-left: 5px solid #cfa539; background-color: #982b2b !important color:white">
                <div class="card-body text-center">
                    <img src="\assets\imgs\site\svg\error_50dp_982B2B_FILL0_wght400_GRAD0_opsz48.svg" alt="" style="">
                    <h5 class="mt-3" style="font-weight: bold;">Este comercio todavia no tiene productos
                        agregados
                    </h5>
                </div>
            </div>
        </div>
    </div>
    {{/if}}
</div>