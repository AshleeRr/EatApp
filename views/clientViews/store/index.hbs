<div class="row mt-4 justify-content-center">
    <h2 class="mt-3 text-center mb-5" style="font-weight: bold;">
        <a href="/client/home" class="btn mt-2" style="float: inline-start;">
            <img src="\assets\imgs\site\svg\arrow_back_ios_50dp_982B2B_FILL0_wght400_GRAD0_opsz48.svg" alt="">
        </a>{{comercio.name}}
    </h2>
    {{#if hasCategorias}}
    <div class="row">
        <div class="col-md-8">
            {{#each categorias}}
            <div class="row g-4 mb-5">
                <h5 class="mt-3" style="font-weight: bold;">{{nombre}}
                </h5>
                {{#if productos.length}}
                {{#each productos}}
                <div class="col-md-6">
                    <div class="card shadow border-0 h-100">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-9">
                                    <h6 style="font-weight: bold;">{{nombre}}</h6>
                                    <p class="text-muted mb-2">{{descripcion}}</p>
                                    <div class="row mt-5">
                                        <div class="col col-md-6">
                                            <h4 style="font-weight: bold; color: #000000;">${{precio}}</h4>
                                        </div>
                                        <div class="col col-md-6">
                                            <form action="/client/store/add-product/shopping-car" method="post">
                                                <input type="hidden" name="idProducto" value="{{id}}">
                                                <button class="float-end btn" type="submit" title="agregar al carrito">
                                                    <img src="\assets\imgs\site\svg\add_shopping_cart_24dp_982B2B_FILL0_wght400_GRAD0_opsz24.svg"
                                                        alt="">
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-3 text-center">
                                    <img src="{{imagen}}" alt="{{nombre}}" class="img-fluid rounded"
                                        style="width: 125px; height: 125px; object-fit: cover;">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
                {{else}}
                <div class="row w-75 g-4">
                    <div class="col col-md-12">
                        <div class="card shadow border-0"
                            style="border-left: 5px solid #cfa539; background-color: #982b2b !important color:white">
                            <div class="card-body text-center">
                                <img src="\assets\imgs\site\svg\sentiment_sad_24dp_982B2B_FILL0_wght400_GRAD0_opsz24.svg"
                                    alt="" style="">
                                <h5 class="mt-3" style="font-weight: bold;">Lo sentimos todavia no tenemos productos de
                                    esta categoria
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>
                {{/if}}
            </div>
            {{/each}}
        </div>
        <div class="col-md-4">
            <div class="card shadow border-0" style="border-left: 5px solid #009688; height: 400px;
                                     ">
                <div class="card-body text-center">
                    <h6 style="font-weight: bold;">MI CARRITO</h6>
                </div>
            </div>
        </div>
        {{else}}
        <div class="row w-75 g-4">
            <div class="col-md-12">
                <div class="card shadow border-0"
                    style="border-left: 5px solid #cfa539; background-color: #982b2b !important color:white">
                    <div class="card-body text-center">
                        <img src="\assets\imgs\site\svg\error_50dp_982B2B_FILL0_wght400_GRAD0_opsz48.svg" alt=""
                            style="">
                        <h5 class="mt-3" style="font-weight: bold;">Este comercio todavia no tiene productos agregados
                        </h5>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}


    </div>

</div>