<div class="row mb-3">
  <div class="col-12 text-center">
    <h2>My Directions</h2>
  </div>
</div>

<div class="row mb-4">
  <div class="col-12 text-center">
    <a href="/client/directions/create" class="btn btn-dark">
      <i class="bi bi-bookmark-plus"></i> Add New
    </a>
  </div>
</div>
{{#if hasAdresses}}

  <div class="row">
    {{#each adressesList}}
      <div class="col-12 col-sm-4">
        <div class="card shadow-sm mb-3">
          <div class="card-body">
            <h5 class="card-title fw-bold">
              <i class="bi bi-geo-alt-fill text-primary"></i> {{this.nombre}}
            </h5>
            <p class="card-text text-muted">{{this.descripcion}}</p>

            <div class="mt-2">
              <a href="/client/directions/edit/{{this.id}}" 
                 class="btn btn-primary btn-sm me-2">
                <i class="bi bi-pencil"></i> Edit
              </a>
              <form method="post" action="/client/directions/delete" class="float-end me-2">
                <input type="hidden" value="{{this.id}}" name="AdressId" />
                <button type="submit" class="btn btn-danger btn-sm delete-direction">
                  <i class="bi bi-trash3"></i> Delete
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

{{else}}

  <div class="row d-flex justify-content-center">
    <div class="col-12 col-sm-6">
      <div class="alert alert-info text-center" role="alert">
        <i class="bi bi-info-circle"></i> You have no directions registered.
      </div>
    </div>
  </div>

{{/if}}

{{#section "scripts"}}
  <script src="/assets/JavaScript/directions.js"></script>
{{/section}}