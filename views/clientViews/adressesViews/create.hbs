<div class="row mt-5 ">
  <h2 class="text-center fw-bold">{{#if editMode}}EDIT ADRESS{{else}}CREATE ADRESS{{/if}}</h2>
</div>

<div class="row mt-3 d-flex justify-content-center">
  <div class="col-12 col-sm-6">
    <form method="POST" action="/client/directions/{{#if editMode}}edit{{else}}create{{/if}}">

      <div class="mb-3">
        <label for="name" class="form-label">Adress Name</label>
        <input type="text" class="form-control" id="name" name="Name" value="{{adress.nombre}}"
          placeholder="Enter adress name" required>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea class="form-control" id="descripcion" name="Description" rows="3"
          required>{{adress.descripcion}}</textarea>
      </div>

      <button type="submit" class="btn btn-dark w-100">
        <i class="bi bi-save"></i> {{#if editMode}}Update{{else}}Save{{/if}}
      </button>

      {{#if editMode}}
      <input type="hidden" name="AdressId" value="{{adress.id}}" />
      {{/if}}

      <div class="mt-3">
        <a href="/client/directions/home" class="btn btn-outline-secondary w-100">
          <i class="bi bi-arrow-left"></i> Back to list
        </a>
      </div>
    </form>
  </div>
</div>