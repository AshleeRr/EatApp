<div class="row mt-5">
    <div class="col-md-8">
        <form action="/client/order/proccess-order" method="post">
            <div class="card shadow border-0 h-100">
                <div class="card-body">
                    {{#each direcciones}}
                    <div class="row float-start w-100 g-4 aling-items-center justify-content-center"
                        style="border-bottom: 1px solid #eee; margin-top: 0.1px">
                        <div class="col col-md-12">
                            <small class="fw-bold "><input type="radio" name="idDireccion" value="{{id}}" required>
                                {{nombre}}</small>
                            <small class="text-muted"> {{descripcion}}</small>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>

            <button class="btn float-end mt-2" type="submit" id="btnPedir" style="background-color: #982b2b;" disabled>
                Realizar pedido</button>
        </form>
    </div>

    <div class="col-md-4">
        <div class="card shadow border-0" style="border-left: 5px solid #982b2b height: 400px; overflow-y: auto;">
            <div class="card-body">
                <h6 class="text-center" style="font-weight: bold;">MI CARRITO</h6>

                {{#if hasCarrito}}
                <div class="carrito-lista">
                    {{#each carrito}}
                    <div class="d-flex justify-content-between align-items-center mb-2 p-2"
                        style="border-bottom: 1px solid #eee;">
                        <div>
                            <small class="fw-bold">{{producto.nombre}}</small>
                            <div class="text-muted small">${{producto.precio}}</div>
                        </div>
                    </div>
                    {{/each}}
                </div>

                {{#if factura}}
                <div class="mt-3 pt-2" style="border-top: 2px solid #982b2b">
                    <div class="d-flex justify-content-between">
                        <span>Subtotal:</span>
                        <strong>{{factura.subtotal}} $</strong>
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <span>Itbis</span>
                    <strong>{{factura.porciento}} %</strong>
                </div>
                <div class="d-flex justify-content-between" style="font-size: 18px;">
                    <span><strong>Total:</strong></span>
                    <strong>{{factura.total}} $</strong>
                </div>


                {{/if}}

                {{else}}
                <div class="text-center">
                    <img src="\assets\imgs\site\svg\error_50dp_982B2B_FILL0_wght400_GRAD0_opsz48.svg" alt="">
                    <h6 class="mt-3">No tienes productos en el carrito</h6>
                </div>
                {{/if}}
            </div>
        </div>
    </div>