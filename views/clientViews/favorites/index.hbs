<a href="/client/home" class="btn mt-2" style="float: inline-start;">
    <img src="\assets\imgs\site\svg\arrow_back_ios_50dp_982B2B_FILL0_wght400_GRAD0_opsz48.svg" alt="">
</a>
<h3 class="fw-bold text-center mt-5 mb-3">MY FAVORTITES COMERCES</h3>

<div class="row w-50 m-auto justify-content-center">
    <div class="col">
        {{#if hasFavoritos}}
        {{#each favoritos}}
        <a href="/client/store/home/{{comercio.dataValues.id}}">
            <div class="card shadow border-0 h-100 ">
                <div class="card-body">
                    <div class="row">
                        <div class="col col-md-3">
                            <img class="mb-2 img-fluid rounded" style="width: 120px; height: 120px;"
                                src="{{comercio.dataValues.logo}}" alt="">
                        </div>
                        <div class="col col-md-9 justify-content-center">
                            <h5 style="font-weight:bold;">{{comercio.dataValues.name}}
                            </h5>
                            <form action="/client/favorites/delete/favorite" class="form-eliminar" method="POST">
                                <input type="hidden" name="userId" value="{{../user.id}}">
                                <input type="hidden" name="businessId" value="{{comercio.dataValues.id}}">
                                <button type="submit" class="btn"><img
                                        src="\assets\imgs\site\svg\heart_minus_30dp_982B2B_FILL0_wght400_GRAD0_opsz24.svg"
                                        alt=""></button>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </a>
        {{/each}}
    </div>
</div>
{{else}}
<div class="row w-100 g-4">
    <div class="col col-md-12">
        <div class="card shadow border-0"
            style="border-left: 5px solid #cfa539; background-color: #982b2b !important color:white">
            <div class="card-body text-center">
                <img src="\assets\imgs\site\svg\sentiment_sad_24dp_982B2B_FILL0_wght400_GRAD0_opsz24.svg" alt=""
                    style="">
                <h5 class="mt-3" style="font-weight: bold;">No tienes comercios favoritos agregados
                </h5>
            </div>
        </div>
    </div>
</div>
{{/if}}